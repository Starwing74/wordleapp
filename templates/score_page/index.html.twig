{% extends 'base.html.twig' %}

{% block title %}Hello ScorePageController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .btn-outline {
        color: #4fbfa8;
        background-color: #ffffff;
        border-color: #4fbfa8;
        font-weight: bold;
        letter-spacing: 0.05em;
    }

    .gtrreffr:hover {
        background-color: #4CAF50;
        color: white;
    }
</style>

<div class="example-wrapper card" style="background-color: #43A8FF">
    <center>
    <div class="container">
        <div>
        {% if won == "yes" %}
            <h2>You won the game!</h2>
        {% elseif won == "no" %}
            <h2>You lost the game</h2>
        {% endif %}

        <h2>Word : {{ wordToGuess }}</h2>

        <h2>Score :</h2>


        <table>
            {% for i in tab %}
                <tr>
                    <div class="card-group">
                    {% for u in i %}
                        {% if u[1] == "0" %}
                            <td>
                                <div class="card text-center" style=" background-color: #ffffff; color: #ffffff; width: 4rem; border-color: black">
                                    X
                                </div>
                            </td>
                            {% elseif u[1] == "2" %}
                                <td>
                                    <div class="card text-center" style=" background-color: #ff0000; color: #ff0000; width: 4rem; border-color: black">
                                        X
                                    </div>
                                </td>
                            {% elseif u[1] == "-1" %}
                                <td>
                                    <div class="card text-center" style="background-color: #ffb700; color: #ffb700; width: 4rem; border-color: black">
                                        X
                                    </div>
                                </td>
                            {% elseif u[1] == "1" %}
                                <td>
                                    <div class="card text-center" style="background-color: #43A047; color: #43A047; width: 4rem; border-color: black">
                                        X
                                    </div>
                                </td>
                            {% endif %}
                    {% endfor %}
                    </div>
                </tr>
            {% endfor %}
        </table>
            <br>
            <input type="button" onclick="location.href='{{ path('app_start_page') }}';" value="Restart?" class="btn btn-primary m-2">
            <br>
            <input type="button" onclick="location.href='{{ path('app_screenshot_page', {won: won}) }}';" value="Share?" class="btn btn-primary m-2">
            <br>
        </div>
    </div>
    </center>
</div>
{% endblock %}
