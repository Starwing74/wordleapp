{% extends 'base.html.twig' %}

{% block title %}Hello StartPageController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <center>
        {{ form_start(form) }}
        <div class="container">
            <div class="home-header-bottom page-container m-3">
                <div class="home-header-bottom-card card flex-column align-items-center justify-content-center w-100 text-center text-white p-2" style="background-color: #43A8FF">
                    <h5>Welcome to my Wordle Game, pls choose the difficulty, and click on start :</h5>
                    <br>
                    <div class="input-group mb-3 p-2">
                        <span class="input-group-text bg-primary"><b>Number of tries</b></span>
                        {{ form_widget(form.nombreEssais) }}
                        <span class="input-group-text bg-primary"><b>Length of the word</b></span>
                        {{ form_widget(form.tailleMot) }}
                        <input type="submit" value="Start Game" class="btn btn-primary"/>
                    </div>
                </div>
            </div>
        {{ form_end(form) }}
    </center>
</div>
{% endblock %}
